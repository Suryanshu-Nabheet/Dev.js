{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Suryanshu-Nabheet/dev.js.git"
  },
  "scripts": {
    "copyright": "node scripts/copyright.js",
    "hash": "scripts/hash.sh",
    "start": "pnpm workspace playground run start",
    "next": "pnpm workspace playground run dev",
    "build": "pnpm workspaces run build",
    "dev": "cd apps/playground && pnpm dev",
    "test": "pnpm workspaces run test",
    "snap": "pnpm workspace babel-plugin-devjs-compiler run snap",
    "snap:build": "pnpm workspace snap run build",
    "npm:publish": "node scripts/release/publish",
    "eslint-docs": "pnpm workspace babel-plugin-devjs-compiler build && node scripts/build-eslint-docs.js"
  },
  "dependencies": {
    "fs-extra": "^4.0.2",
    "devjs-is": "0.0.0-experimental-4beb1fd8-20241118"
  },
  "devDependencies": {
    "@babel/types": "^7.26.0",
    "@tsconfig/strictest": "^2.0.5",
    "concurrently": "^7.4.0",
    "esbuild": "^0.25.0",
    "folder-hash": "^4.0.4",
    "npm-dts": "^1.3.13",
    "object-assign": "^4.1.1",
    "ora": "5.4.1",
    "prettier": "^3.3.3",
    "prettier-plugin-hermes-parser": "^0.26.0",
    "prompt-promise": "^1.0.3",
    "rimraf": "^6.0.1",
    "to-fast-properties": "^2.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.4.3",
    "wait-on": "^7.2.0",
    "yargs": "^17.7.2"
  },
  "resolutions": {
    "@babel/types": "7.26.3"
  },
  "packageManager": "yarn@1.22.22"
}
